{
  "name": "kap",
  "productName": "Kap",
  "version": "3.6.0",
  "description": "An open-source screen recorder built with web technology",
  "license": "MIT",
  "repository": "wulkano/kap",
  "homepage": "https://getkap.co",
  "author": {
    "name": "Wulkano",
    "email": "hello@wulkano.com",
    "url": "https://wulkano.com"
  },
  "private": true,
  "main": "dist-js/index.js",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "test": "jest && yarn test:main",
    "test:main": "TS_NODE_PROJECT=test/tsconfig.json ava",
    "test:ci": "yarn test:main --tap | tap-xunit > ~/reports/ava.xml",
    "start": "tsc && run-electron .",
    "build-main": "tsc",
    "build-renderer": "next build renderer && next export renderer",
    "build": "yarn build-main && yarn build-renderer",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "sentry-version": "echo \"$npm_package_name@$npm_package_version\"",
    "dev": "next dev renderer"
  },
  "bundle": {
    "name": "Kap"
  },
  "dependencies": {
    "@electron/notarize": "^1.2.2",
    "@sentry/browser": "^7.73.0",
    "@sentry/electron": "^4.8.0",
    "@sindresorhus/to-milliseconds": "^1.2.0",
    "ajv": "^8.12.0",
    "aperture": "^6.1.3",
    "base64-img": "^1.0.4",
    "classnames": "^2.5.1",
    "clean-stack": "^3.0.1",
    "copy-file": "^11.0.0",
    "delay": "^5.0.0",
    "electron-better-ipc": "^1.1.1",
    "electron-log": "^4.4.8",
    "electron-next": "^3.1.5",
    "electron-store": "^8.1.0",
    "electron-timber": "^0.5.1",
    "electron-updater": "^4.6.5",
    "electron-util": "^0.14.2",
    "ensure-error": "^3.0.1",
    "execa": "5.0.0",
    "ffmpeg-static": "^4.4.1",
    "gifsicle": "^5.3.0",
    "got": "^12.6.1",
    "insight": "^0.10.3",
    "is-online": "^8.5.1",
    "lodash": "^4.17.21",
    "mac-open-with": "^1.2.3",
    "mac-screen-capture-permissions": "^1.1.0",
    "mac-windows": "^1.0.0",
    "macos-audio-devices": "^1.4.0",
    "macos-version": "^5.2.1",
    "make-dir": "^3.1.0",
    "moment": "^2.30.1",
    "move-file": "^2.1.0",
    "nearest-normal-aspect-ratio": "^1.2.1",
    "node-mac-app-icon": "^1.4.0",
    "object-hash": "^2.2.0",
    "p-cancelable": "^2.1.1",
    "p-event": "^4.2.0",
    "package-json": "^6.5.0",
    "pify": "^5.0.0",
    "plist": "^3.1.0",
    "pretty-bytes": "^5.6.0",
    "pretty-ms": "^7.0.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-linkify": "^0.2.2",
    "react-tooltip": "^4.5.1",
    "read-pkg": "^5.2.0",
    "semver": "^7.6.3",
    "string-math": "^1.2.2",
    "tempy": "^1.0.1",
    "tildify": "^2.0.0",
    "tmp": "^0.2.3",
    "unstated": "^1.2.0",
    "unstated-next": "^1.1.0",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@babel/core": "^7.25.8",
    "@babel/eslint-parser": "^7.25.8",
    "@sindresorhus/tsconfig": "^0.7.0",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@types/ffmpeg-static": "^3.0.3",
    "@types/got": "9.6.12",
    "@types/insight": "^0.8.4",
    "@types/lodash": "^4.17.10",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^14.18.63",
    "@types/object-hash": "^1.3.4",
    "@types/react": "^18.3.11",
    "@types/sinon": "^9.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "ava": "^5.3.1",
    "babel-eslint": "^10.1.0",
    "electron": "^26.3.0",
    "electron-builder": "^23.6.0",
    "electron-builder-notarize": "^1.5.2",
    "eslint": "^8.38.0",
    "eslint-config-next": "^13.5.4",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "module-alias": "^2.2.3",
    "next": "^13.5.4",
    "prettier": "^3.0.3",
    "run-electron": "^1.0.0",
    "sinon": "^16.1.0",
    "tap-xunit": "^2.4.1",
    "ts-node": "^10.9.2",
    "type-fest": "^2.19.0",
    "typed-emitter": "^1.4.0",
    "typescript": "^5.2.2",
    "unique-string": "^2.0.0"
  },
  "_moduleAliases": {
    "electron": "test/mocks/electron.ts"
  },
  "ava": {
    "files": [
      "test/**/*.ts",
      "test/**/*.js",
      "!test/helpers",
      "!test/mocks"
    ],
    "extensions": [
      "ts"
    ],
    "verbose": true,
    "timeout": "5m",
    "failFast": true,
    "require": [
      "ts-node/register",
      "module-alias/register"
    ]
  },
  "build": {
    "appId": "com.wulkano.kap",
    "afterSign": "electron-builder-notarize",
    "protocols": {
      "name": "kap",
      "schemes": [
        "kap"
      ]
    },
    "files": [
      "static",
      "dist-js/**/*",
      "!renderer",
      "renderer/out"
    ],
    "mac": {
      "electronUpdaterCompatibility": "^2.16",
      "category": "public.app-category.productivity",
      "minimumSystemVersion": "10.12.0",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "entitlements": "./build/entitlements.mac.inherit.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Kap needs access to the microphone to be able to record audio for screen recordings.",
        "NSCameraUsageDescription": "A Kap plugin wants to use the camera.",
        "NSUserNotificationAlertStyle": "alert",
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "Video",
            "CFBundleTypeRole": "Viewer",
            "LSHandlerRank": "Alternate",
            "LSItemContentTypes": [
              "public.mpeg-4",
              "com.apple.quicktime-movie"
            ]
          }
        ]
      },
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    },
    "dmg": {
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
